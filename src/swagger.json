{
  "openapi": "3.0.0",
  "info": {
    "title": "Financiacio API Docs",
    "description": "Financiacio backend endpoints",
    "version": "0.1"
  },
  "paths": {
    "/users": {
      "get": {
        "tags": ["users"],
        "summary": "List all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "cpf": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["users"],
        "summary": "Create an user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "cpf": { "type": "string" }
                },
                "example": {
                  "name": "Gustavo In√°cio",
                  "cpf": "12345678910"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "User already exists"
          }
        }
      }
    },
    "/transactions": {
      "get": {
        "tags": ["transactions"],
        "summary": "List all transactions",
        "responses": {
          "200": {
            "description": "Success"
          },
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "cpf": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a transaction",
        "tags": ["transactions"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": { "type": "number" },
                  "description": { "type": "string" }
                },
                "example": {
                  "amount": 3000,
                  "description": "This is an example transaction"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          }
        }
      },
      "paths": {
        "/import": {
          "post": {
            "summary": "Import transactions from a file",
            "tags": ["transactions"],
            "requestBody": {
              "content": {
                "multipart/form-data": {
                  "schema": {
                    "type": "file",
                    "properties": "{description},{amount}"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
